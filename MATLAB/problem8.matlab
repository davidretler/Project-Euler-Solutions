%%Project Euler Problem Number Eight
%%Find the greatest product of five consecutive digits in the 1000-digit number.
%%David Etler, 01 July 2012

function pairs = pairnumbers()						%Populates a matrix of number pairs
	string = '';
	pairs = [];										%Initialize empty matrix
	i = 1;
	while i < 995
		pairs = [pairs; (string(i:(i+4)))];			%Put the next five numbers in a new row of the matrix
		i += 1;										%Increase the index by one
	end
	return
end

function row = getrows(pairs)						%Converts the rows to numbers (from a string)
	row = [];
	for i = 1:rows(pairs)
		for j = 1:5
			row(i,j) = str2num(pairs(i,j));			%Take each digit from the string and make it it's own column
		end
	end
end

function products = getproducts(pairs)				%Get the product of each row
	products = [];
	for i = 1:rows(pairs)
		products(i,:) = prod(pairs(i,:));
	end
	return
end

function out = main()
	pairs = pairnumbers();
	pairs = getrows(pairs);
	products = getproducts(pairs);
	out = max(products');							%Find the maximum value in the product matrix
	return
end